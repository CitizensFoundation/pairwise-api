<h1>New click</h1>

<% form_for(@click) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :site_id %><br />
    <%= f.text_field :site_id %>
  </p>
  <p>
    <%= f.label :visitor_id %><br />
    <%= f.text_field :visitor_id %>
  </p>
  <p>
    <%= f.label :additional_info %><br />
    <%= f.text_area :additional_info %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', clicks_path %>