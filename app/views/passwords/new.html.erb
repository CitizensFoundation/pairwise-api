<h2>Reset your password</h2>

<p>
  We will email you a link to reset your password.
</p>

<% semantic_form_for :password, :url => passwords_path do |form| -%>
  <% form.inputs do -%>
    <%= form.input :email %>
  <% end -%>
  <% form.actions do -%>
    <%= form.submit "Reset password" %>
  <% end -%>
<% end -%>

